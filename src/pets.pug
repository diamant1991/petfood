extends pug/base

append vars
	//- ...

block content
	.wrapper
		include pug/header
		.content
			.payment
			.get-call
			.container
				include pug/breadcrumb
				.profile-page
					select.select-item.select-full.visible-md
						option Общая информация
						option История покупок
						option Питомцы
					.news-nav.hidden-md
						a(href="#").btn.btn-dark.btn-news Общая информация
						a(href="#").btn.btn-dark.btn-news История покупок
						a(href="#").btn.btn-dark.btn-news.current Питомцы
					.row
						.col-md-6
							.profile-info
								.profile-info__header
									.table-cell.profile-info__icon
										.profile-info__icon__item(style="background-image: url(images/profile.png)")
									.table-cell.profile-info__name
										b Феликс
								table.profile-table
									tbody
										tr
											td Тип питомца: 
											td 
												b Собака
										tr
											td Дата Рождения: 
											td 
												b 11.02.17
										tr
											td Пол: 
											td 
												b Мальчик
								.profile-info__btn
									a(href="#") Изменить данные
						.col-md-6
							.profile-info
								.profile-info__header
									.table-cell.profile-info__icon
										.profile-info__icon__item(style="background-image: url(images/profile.png)")
									.table-cell.profile-info__name
										b Феликс
								table.profile-table
									tbody
										tr
											td Тип питомца: 
											td 
												b Собака
										tr
											td Дата Рождения: 
											td 
												b 11.02.17
										tr
											td Пол: 
											td 
												b Мальчик
								.profile-info__btn
									a(href="#") Изменить данные
					.row
						.col-md-6
							.register__item.profile-form
								.modal-header.register-header
									h5 Личная информация
								.register__item__content
									.register__form
										.form-group.form-group--register.row.no-gutters.align-items-center.justify-content-between
											.form-label
												span Тип питомца
											.form-right
												select.select-item.select-item--modal.select-item--form
													option Собака
													option Кошка
										.form-group.form-group--register.row.no-gutters.align-items-center.justify-content-between
											.form-label
												span Дата Рождения
											input(type="text").form-control.form-control--register
										.form-group.form-group--register.row.no-gutters.align-items-center.justify-content-between
											.form-label
												span Пол
											.form-right
												.profile-radio.middle
													input(type="radio" name="pol")#pol1.profile-radio.profile-radio__item
													label(for="pol1") Мальчик
												.profile-radio.middle
													input(type="radio" name="pol")#pol2.profile-radio__item
													label(for="pol2") Девочка
										.form-group.form-group--register.row.no-gutters.align-items-center.justify-content-between
											div
											button(type="submit").link-btn.link-btn--product.link-btn--modal Сохранить
	include pug/footer.pug